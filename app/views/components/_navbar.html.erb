<div class="navbar bg-base-100 shadow-sm flex items-center justify-between">
  <div class="flex items-center gap-4">
    <%= render "components/sidebar" %>
    <%= link_to "Rent a world", root_path, class:"btn btn-ghost text-xl" %>
    <label class="toggle text-base-content" data-controller="dark-mode">
      <%# TODO: persist theme change => currently lost if refresh or path change %>
      <input type="checkbox" value="dim" class="theme-controller" data-dark-mode-target="checkbox" data-action="change->dark-mode#toggle">
      <svg aria-label="Sun" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <g stroke-linejoin="round" stroke-linecap="round" stroke-width="2" fill="none" stroke="currentColor">
          <circle cx="12" cy="12" r="4"></circle>
          <path d="M12 2v2"></path>
          <path d="M12 20v2"></path>
          <path d="m4.93 4.93 1.41 1.41"></path>
          <path d="m17.66 17.66 1.41 1.41"></path>
          <path d="M2 12h2"></path>
          <path d="M20 12h2"></path>
          <path d="m6.34 17.66-1.41 1.41"></path>
          <path d="m19.07 4.93-1.41 1.41"></path>
        </g>
      </svg>
      <svg aria-label="Moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <g stroke-linejoin="round" stroke-linecap="round" stroke-width="2" fill="none" stroke="currentColor">
          <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
        </g>
      </svg>
    </label>
  </div>
  <div class="flex items-center gap-2">
    
    <%# <input type="text" placeholder="Search" class="input input-bordered w-24 md:w-auto" /> %>
    <%= render "components/searchbar" %>
    <%= render "components/notification_bell" %>
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img alt="Tailwind CSS Navbar component" src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp">
        </div>
      </div>
      <ul tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-4 w-52 p-2 shadow">
        <div class="flex items-center justify-center pt-4">
          <% if current_user.present? %>
            <h4><%= current_user.full_name %></h4>
          <% end %>
        </div>
        <div class="divider divider-info"></div>
        <li><a class="justify-between">Profile</a></li>
        <li><%= link_to "Settings", "#" %></li>
        <li><%= link_to "Sign-in", new_user_session_path %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %></li>
      </ul>
    </div>
  </div>
</div>
