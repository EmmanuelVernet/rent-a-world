<div class="dropdown dropdown-end">
  <div tabindex="0" role="button" class="btn btn-ghost btn-outline btn-accent btn-circle">
    <div class="indicator"><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg> <span class="badge badge-sm badge-accent indicator-item"><%= current_user&.notifications&.count || 0 %></span></div>
  </div>
  <%# Dropdown notification info %>
  <div tabindex="0" class="mt-4 w-xl z-1 card card-compact dropdown-content bg-base-100 shadow">
    <div class="card-body"><span class="font-bold text-lg text-center"><%= current_user&.notifications&.count || 0 %> Notification(s)</span>
    <div class="h-56 overflow-auto">
      <% if current_user %>
        <% current_user.notifications.each do |notification| %>
          <%= render "components/notification_info_card", notification: notification %>
        <% end %>
      <% end %>
    </div>
      <div class="card-actions"><button class="btn btn-accent btn-block">View notifications</button></div>
    </div>
  </div>
</div>
