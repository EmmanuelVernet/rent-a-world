<div class="divider"></div>
<% if @all_requests.empty? %>
  <p>No bookings available</p>
<% else %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @all_requests.each do |request| %>
      <%= link_to booking_path(request.id), class: "card #{request.user == current_user ? "bg-primary" : "bg-neutral"} text-neutral-content w-full" do %>
        <div class="card-body items-center text-center">
          <h2 class="card-title">Booking #<%= request.id %></h2>
          <p>World: <%= request.world.title %></p>
          <p>Renter: <%= request.user.full_name %></p>
          <p>Owner: <%= request.world.user.full_name %></p>
          <p>Reservation dates: from <%= request.start_date.strftime("%d/%m/%Y") %> to <%= request.end_date.strftime("%d/%m/%Y") %></p>
          <p>Price: <%= request.total_price %> â‚¬</p>
          <div class="card-actions justify-end">
            Status: <span class="badge badge-info"><%= request.status %></span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
