<div class="container mx-auto p-4 max-w-4xl">
  <!-- Hero Image and Title -->
  <div class="card bg-base-100 shadow-lg mb-4">
    <figure class="relative h-48">
      <img src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
           alt="<%= @booking.world.title %>"
           class="w-full h-full object-cover" />
      <div class="badge badge-secondary absolute top-3 right-3">
        <%= @booking.world.category %>
      </div>
    </figure>
    <div class="card-body p-4">
      <h1 class="card-title text-2xl mb-2">
        <%= @booking.world.title %>
      </h1>
      <p class="text-base-content/70 mb-3">
        <%= @booking.world.description %>
      </p>
      <div class="flex items-center text-primary mb-3">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
        </svg>
        <%= @booking.world.place %>
      </div>
      <div class="flex flex-wrap gap-1">
        <% @booking.world.tags.each do |tag| %>
          <div class="badge badge-outline badge-sm">
            <%= tag.name %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Booking Details -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 mb-4">
    <div class="stat bg-base-200 rounded-lg p-3">
      <div class="stat-title text-xs">Total Price</div>
      <div class="stat-value text-primary text-lg">
        <%= @booking.total_price %>â‚¬
      </div>
    </div>
    <div class="stat bg-base-200 rounded-lg p-3">
      <div class="stat-title text-xs">Capacity</div>
      <div class="stat-value text-secondary text-lg">
        <%= @booking.world.capacity %>
      </div>
    </div>
    <div class="stat bg-base-200 rounded-lg p-3">
      <div class="stat-title text-xs">Check-in</div>
      <div class="stat-value text-accent text-sm font-semibold">
        <%= @booking.start_date %>
      </div>
    </div>
    <div class="stat bg-base-200 rounded-lg p-3">
      <div class="stat-title text-xs">Check-out</div>
      <div class="stat-value text-info text-sm font-semibold">
        <%= @booking.end_date %>
      </div>
    </div>
  </div>
  <!-- User Details Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
    <!-- Guest & Host -->
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-4">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <h3 class="font-semibold text-sm mb-2">Guest</h3>
            <p class="text-base-content/80">
              <%= @booking.user.first_name %> <%= @booking.user.last_name %>
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-sm mb-2">Host</h3>
            <p class="text-base-content/80">
              <%= @world.user.first_name %> <%= @world.user.last_name %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <!-- Amenities -->
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-4">
        <h3 class="font-semibold text-sm mb-3">Amenities</h3>
        <% if @booking.world.amenities.any? %>
          <div class="space-y-2">
            <% @booking.world.amenities.each do |amenity| %>
              <div class="flex items-start gap-2">
                <div class="badge badge-primary badge-xs mt-1"></div>
                <div>
                  <div class="text-sm font-medium"><%= amenity.name %></div>
                  <% if amenity.description.present? %>
                    <div class="text-xs text-base-content/60">
                      <%= amenity.description %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-base-content/60">No amenities available</p>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Map -->
  <div class="card bg-base-100 shadow-lg mb-4">
    <div class="card-body p-4">
      <h3 class="font-semibold text-sm mb-3">Location</h3>
      <div id="world-map" class="mt-4">
        <div class="aspect-video h-64 w-full rounded-lg overflow-hidden shadow">
          <iframe
              width="100%"
              height="100%"
              frameborder="0"
              style="border:0"
              src="https://www.google.com/maps?q=<%= @world.latitude %>,<%= @world.longitude %>&hl=en&z=10&output=embed"
              allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </div>
  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-2 mt-2 mb-20">
    <%= link_to "Back to Bookings", bookings_path, 
        class: "btn btn-outline btn-primary" %>
    <% if @booking.user == current_user %>
      <%= link_to "Edit my request", edit_booking_path(@booking), 
          class: "btn btn-info" %>
    <% end %>
    <% unless @booking.canceled? %>
      <%= button_to "Cancel booking", cancel_booking_path(@booking), 
          method: :post, 
          data: { turbo_confirm: "Are you sure?" }, 
          class: "btn btn-warning" %>
    <% end %>
  </div>
</div>