<div class="md:container md:mx-auto">
  <% if current_user.admin? %>
    <h1><strong>All app bookings</strong></h1>
  <% else %>
    <h1>My Booking requests</h1>
  <% end %>
  <% @bookings.each do |booking| %>
    <div id="rentee-information" class="py-3">
      <h1><strong>Rentee information</strong></h1>
      <%= booking.user.first_name %>
      <%= booking.user.last_name %>
    </div>
    <div id="world-information" class="py-3">
      <h1><strong>World information</strong></h1>
      <%= booking.world.title %>
      <%= booking.world.category %>
      <%= booking.world.description %>
      <%= booking.world.place%>
    </div>
  <% end %>
  <div class="divider"></div>

<!-- name of each tab group should be unique -->
<div class="tabs tabs-lift">
  <input type="radio" name="my_tabs_3" class="tab" aria-label="My booking requests" />
  <div class="tab-content bg-base-100 border-base-300 p-6">My booking requests
    <%= render "bookings/booking_requests/outgoing_request_card" %>
  </div>

  <input type="radio" name="my_tabs_3" class="tab" aria-label="Incoming requests" checked="checked" />
  <div class="tab-content bg-base-100 border-base-300 p-6">Incoming requests
        <%= render "bookings/booking_requests/incoming_request_card" %>
  </div>

  <input type="radio" name="my_tabs_3" class="tab" aria-label="Admin" />
  <div class="tab-content bg-base-100 border-base-300 p-6">Admin
    INSERT TABLE LIST HERE
  </div>
</div>

</div>