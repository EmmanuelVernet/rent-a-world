<%= turbo_frame_tag "activities_modal" do %>
<div class="pt-4">
  <%= form_with url: world_world_activities_path(@world), method: :patch, local: true, class: "space-y-4 p-6 bg-white shadow-lg rounded-lg max-w-lg mx-auto" do |form|%>
    <h1>Edit <%= @world.activities.name %></h1>
    <% if @world.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% @world.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset class="fieldset">
    <legend class="fieldset-title">Select activities</legend>
      <div class="flex flex-wrap gap-4">
        <% @activities.each do |activity| %>
          <label class="flex items-center gap-2 cursor-pointer">
            <%= check_box_tag "world_activity[id][]", activity.id, @world.activity_ids.include?(activity.id), class: "checkbox checkbox-accent" %>
            <span class="text-sm"><%= activity.name %></span>
          </label>
        <% end %>
      </div>
    </fieldset>

    <fieldset class="fieldset relative">
      <%= form.submit "Update world activities", class: "btn btn-primary w-full", data: { turbo_frame: "activities_list", action: "click->modal#close"} %>
    </fieldset>
    <%# <%= link_to "Back to world", world_path(@world), class: "btn btn-secondary w-full" %>
  <% end %>
</div>

<% end %>
