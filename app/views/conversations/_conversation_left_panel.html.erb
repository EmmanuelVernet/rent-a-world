<div class="w-1/3 bg-base-100 border-r border-base-200 flex flex-col">
  <!-- Conversations Header -->
  <div class="navbar bg-base-200 min-h-16">
    <div class="navbar-start">
      <h2 class="text-lg font-semibold">Conversations</h2>
    </div>
    <div class="navbar-end">
      <button class="btn btn-ghost btn-sm btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </button>
    </div>
  </div>
  <!-- Conversations List -->
  <div class="flex-1 overflow-y-auto">
    <ul class="p-0">
      <% @conversations.each do |conv|%>
        <%= link_to conversation_messages_path(conv),
        data: { turbo_frame: "conversation_panel" },
        class: "block p-4 hover:bg-gray-100" do %>
          <li>
            <div class="flex items-center gap-3 p-4 hover:bg-base-200 active:bg-primary active:text-primary-content">
              <div class="avatar">
                <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-medium">
                  <%= conv.sender.first_name[0] %><%= conv.sender.last_name[0] %>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex justify-between items-baseline">
                  <div class="font-medium truncate"><%= conv.sender.full_name %></div>
                  <div class="text-xs opacity-60">2m</div>
                </div>
                <div class="text-sm opacity-60 truncate"><%= conv.title %></div>
              </div>
              <div class="badge badge-primary badge-sm">2</div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>