<div class="flex-1 bg-base-100 flex flex-col">
  <!-- Chat Header -->
  <div class="navbar bg-base-200 min-h-16">
    <div class="navbar-start">
      <div class="flex items-center gap-3">
        <div class="avatar">
          <div class="w-10 rounded-full bg-primary text-primary-content flex items-center justify-center font-medium">
            JD
          </div>
        </div>
        <div>
          <div class="font-medium">John Doe</div>
          <div class="text-sm opacity-60 flex items-center gap-1">
            <div class="badge badge-success badge-xs"></div>
            Online
          </div>
        </div>
      </div>
    </div>
    <div class="navbar-end">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-sm btn-circle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
          </svg>
        </div>
        <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
          <li><a>Profile</a></li>
          <li><a>Mute</a></li>
          <li><a>Block</a></li>
        </ul>
      </div>
    </div>
  </div>
  <!-- Messages Area -->
  <div class="flex-1 overflow-y-auto p-4 space-y-4 bg-base-50">
    <!-- Received Message -->
    <div class="chat chat-start">
      <div class="chat-image avatar">
        <div class="w-8 rounded-full bg-primary text-primary-content flex items-center justify-center text-sm font-medium">
          JD
        </div>
      </div>
      <div class="chat-header">
        John Doe
        <time class="text-xs opacity-50">2:30 PM</time>
      </div>
      <div class="chat-bubble chat-bubble-secondary">
        Hey, how are you doing?
      </div>
    </div>
    <!-- Sent Message -->
    <div class="chat chat-end">
      <div class="chat-header">
        You
        <time class="text-xs opacity-50">2:32 PM</time>
      </div>
      <div class="chat-bubble chat-bubble-primary">
        I'm doing great! Thanks for asking. How about you?
      </div>
    </div>
    <!-- Received Message -->
    <div class="chat chat-start">
      <div class="chat-image avatar">
        <div class="w-8 rounded-full bg-primary text-primary-content flex items-center justify-center text-sm font-medium">
          JD
        </div>
      </div>
      <div class="chat-header">
        John Doe
        <time class="text-xs opacity-50">2:35 PM</time>
      </div>
      <div class="chat-bubble chat-bubble-secondary">
        I'm doing well too! Want to grab lunch sometime this week?
      </div>
    </div>
    <!-- Sent Message -->
    <div class="chat chat-end">
      <div class="chat-header">
        You
        <time class="text-xs opacity-50">2:38 PM</time>
      </div>
      <div class="chat-bubble chat-bubble-primary">
        Sure! How about Thursday around noon?
      </div>
    </div>
    <!-- Typing Indicator -->
    <div class="chat chat-start">
      <div class="chat-image avatar">
        <div class="w-8 rounded-full bg-primary text-primary-content flex items-center justify-center text-sm font-medium">
          JD
        </div>
      </div>
      <div class="chat-bubble">
        <span class="loading loading-dots loading-sm"></span>
      </div>
    </div>
  </div>
  <!-- Message Input -->
  <div class="p-4 bg-base-100 border-t border-base-200">
    <div class="flex gap-2">
      <button class="btn btn-ghost btn-sm btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
        </svg>
      </button>
      <input 
                        type="text" 
                        placeholder="Type a message..." 
                        class="input input-bordered flex-1"
                    >
      <button class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
        </svg>
        Send
      </button>
    </div>
  </div>
</div>