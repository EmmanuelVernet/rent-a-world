  <div class="container mx-auto p-6 max-w-4xl">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Notifications</h1>
      <div class="flex gap-2">
        <div class="badge badge-primary"><%= current_user&.notifications.unread&.count || 0 %> Unread Notification(s)</div>
        <div class="badge badge-ghost"><%= current_user&.notifications&.count || 0 %> Notification(s)</div>
      </div>
    </div>

    <!-- Filter Tabs -->
    <div class="tabs tabs-bordered mb-6">
      <a class="tab tab-active">All</a>
      <a class="tab">Unread</a>
      <a class="tab">Read</a>
    </div>

    <!-- Actions -->
    <div class="flex justify-between items-center mb-6">
      <div class="flex gap-2">
        <button class="btn btn-sm btn-primary">Mark All as Read</button>
        <button class="btn btn-sm btn-ghost">Clear Read</button>
      </div>
    </div>

    <!-- Notifications List -->
    <%= render "notifications/notification_index_card" %>
  
    <!-- Pagination -->
    <div class="flex justify-center mt-8">
      <div class="join">
        <button class="join-item btn btn-sm">«</button>
        <button class="join-item btn btn-sm btn-active">1</button>
        <button class="join-item btn btn-sm">2</button>
        <button class="join-item btn btn-sm">3</button>
        <button class="join-item btn btn-sm">»</button>
      </div>
    </div>
  </div>
