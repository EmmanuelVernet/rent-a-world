<%# Add new review to the list with both instance vars %>
<%= turbo_stream.append "reviews_list" do %>
  <%= render "review", review: @review, world: @world %>
<% end %>

<%# Reset the form and close the modal %>
<%= turbo_stream.update "review_form_modal" do %>
  <%= render "reviews/forms/review_form", world: @world, review: @world.reviews.new %>
<% end %>