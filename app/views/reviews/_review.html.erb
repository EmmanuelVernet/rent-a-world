<div id="<%= dom_id(review) %>" class="card border border-base-300 shadow-md hover:shadow-lg transition-shadow">
  <div class="card-body p-6">
    <!-- Header: avatar + name + date -->
    <div class="flex items-center mb-2">
      <div class="flex-shrink-0 mask mask-squircle h-12 w-12">
        <img src="https://img.daisyui.com/images/profile/demo/5@94.webp" alt="Avatar">
      </div>
      <div class="ml-4">
        <p class="text-lg font-semibold text-gray-900"><%= review.user&.full_name %></p>
        <p class="text-sm text-gray-600"><%= review.created_at&.strftime("%d/%m/%Y") %></p>
      </div>
    </div>
    <div class="divider my-0"></div>
    <!-- Review comment -->
    <p class="text-gray-700 mb-2"><%= review.comment %></p>
    <!-- Rating -->
    <div class="flex items-center mt-2">
      <div class="rating gap-1">
        <% colors = %w[red-400 orange-400 yellow-400 lime-400 green-400] %>
        <% colors.each_with_index do |color, i| %>
          <input type="radio"
                           name="rating-<%= review.id %>"
                           class="mask mask-heart bg-<%= color %>"
                           aria-label="<%= i + 1 %> star"
                           <%= "checked" if i + 1 == review.stars %> />
        <% end %>
      </div>
    </div>
  </div>
</div>
