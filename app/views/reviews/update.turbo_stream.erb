<%# Replace the updated review in the list %>
<%= turbo_stream.replace dom_id(@review) do %>
  <%= render partial: "reviews/review", locals: { review: @review, world: @world } %>
<% end %>

<%# Reset the form and close the modal %>
<%= turbo_stream.update "review_form_modal" do %>
  <%= render "reviews/forms/review_form", world: @world, review: @world.reviews.new %>
<% end %>

<%# Close the modal %>
<%= turbo_stream.after "review_form_modal" do %>
  <script>document.getElementById('review_modal').close();</script>
<% end %>
