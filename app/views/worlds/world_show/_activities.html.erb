<div class="card shadow border border-base-200" id="activities">
  <div class="card-body">
    <h3 class="text-3xl font-bold text-center text-primary">Available Activities</h3>
    <div class="divider divider-primary my-0"></div>
    <% if @world.user == current_user %>
    <%= link_to "Edit", edit_world_world_activities_path(@world),
      data: { turbo_frame: "activities_modal", action:"click->modal#open" },
      class: "absolute right-0 top-1/2 transform -translate-y-1/2 px-3 py-1 rounded-full bg-primary text-white text-sm" %>

      <!-- activities edit modal -->
      <dialog id="edit_world_activity" class="modal" data-modal-target="dialog">
        <div class="modal-box">
          <%= turbo_frame_tag "activities_modal" %>
        </div>
        <form method="dialog" class="modal-backdrop" data-action="click->modal#close">
          <button>close</button>
        </form>
      </dialog>
      <% end %>
    </div>
    <div class="join join-vertical w-full">
      <% @activities.each do |activity| %>
        <div class="collapse collapse-plus border border-base-300 mb-2">
          <input type="radio" name="my-accordion-3" <%= "checked" if activity == @activities.first %> />
          <div class="collapse-title text-xl font-medium">
            <%= activity.name %>
          </div>
          <div class="collapse-content bg-base-50">
            <div class="prose prose-sm max-w-none pt-4">
              <div class="not-prose">
                <div class="grid grid-cols-1 gap-3">
                  <div class="alert alert-info alert-soft py-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <span class="text-sm"><%= activity.description %></span>
                  </div>
                  <div class="stats bg-base-100 border-base-300 border">
                    <div class="stat py-2">
                      <div class="stat-title text-xs">Duration</div>
                      <div class="stat-value text-lg text-primary"><%= activity.duration %> h</div>
                    </div>
                    <div class="stat py-2">
                      <div class="stat-title text-xs">Cost</div>
                      <div class="stat-value text-lg text-success"><%= activity.price %> â‚¬</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
