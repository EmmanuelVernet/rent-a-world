<div class="card bg-base-100 shadow border border-base-200 overflow-y-auto" id="amenities">
  <div class="card-body p-6">
    <h3 class="text-3xl font-bold text-center text-primary">World Map Location</h3>
    <div class="divider divider-primary my-0"></div>
    <div class="space-y-4">
      <h4 class="text-center text-2xl font-bold text-base-content mb-4"><%= @world.place %></h4>
      <div id="world-map" class="mt-4">
        <div class="aspect-video w-full rounded-lg overflow-hidden shadow">
          <iframe
            width="100%"
            height="100%"
            frameborder="0"
            style="border:0"
            src="https://www.google.com/maps?q=<%= @world.latitude %>,<%= @world.longitude %>&hl=en&z=10&output=embed"
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </div>
</div>
