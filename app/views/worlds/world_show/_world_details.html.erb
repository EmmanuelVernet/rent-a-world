<div class="card shadow border border-base-200" id="activities">
  <div class="card-body">
    <h3 class="text-3xl font-bold text-center text-primary mb-2">World Information</h3>
    <div class="divider divider-primary my-0"></div>
    <div class="space-y-6 mt-2">
      <div class="flex flex-wrap gap-2">
        <div class="badge badge-primary badge-lg px-4 py-3">
          Type: <span class="font-semibold"><%= @world.category %></span>
        </div>
      </div>
      <div class="card border border-base-300 shadow-md hover:shadow-lg transition-shadow">
        <div class="card-body p-6">
          <div class="flex items-center gap-3 mb-4">
            <h4 class="card-title text-lg text-base-content">Location</h4>
          </div>
          <div class="divider my-0"></div>
          <p class="text-base-content/80 leading-relaxed"><%= @world.place %></p>
          <%# TO DO: add a link to a modal to open the map %>
        </div>
      </div>
      <div class="card border border-base-300 shadow-md hover:shadow-lg transition-shadow">
        <div class="card-body p-6">
          <div class="flex items-center gap-3 mb-4">
            <h4 class="card-title text-lg text-base-content">What you'll find in this world</h4>
          </div>
          <div class="divider my-0"></div>
          <p class="text-base-content/80 leading-relaxed"><%= @world.description %></p>
        </div>
      </div>
      <div class="stats shadow border border-base-300 w-full">
        <div class="stat">
          <div class="stat-title font-bold">Rate per night</div>
          <div class="stat-value text-success"><%= @world.price %> â‚¬</div>
          <div class="stat-desc">Per night pricing</div>
        </div>
        <div class="stat">
          <div class="stat-title font-bold">Party Capacity</div>
          <div class="stat-value text-primary"><%= @world.capacity %></div>
          <div class="stat-desc">Heroes or partners</div>
        </div>
      </div>
      <div class="alert alert-info alert-soft">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span class="text-sm">Additional information available on demand. Please contact the renter directly.</span>
        <button class="btn btn-soft btn-primary">Contact host</button>
      </div>
    </div>
  </div>
</div>
