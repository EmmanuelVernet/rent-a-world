<div class="card bg-base-100 shadow border border-base-200 overflow-y-auto" id="amenities">
  <div class="card-body p-6">
    <h3 class="text-3xl font-bold text-center text-primary">Amenities</h3>
    <div class="divider divider-primary my-0"></div>
    <div class="space-y-4">
      <% @amenities.each do |amenity| %>
        <div class="card border border-base-300 shadow-md hover:shadow-lg transition-shadow">
          <div class="card-body p-6">
            <div class="flex items-center gap-3 mb-4">
              <h4 class="card-title text-lg text-base-content"><%= amenity.name %></h4>
            </div>
            <div class="divider my-0"></div>
            <% if amenity.description.present? %>
              <div class="text-sm text-base-content/60 italic mt-1 leading-relaxed"><%= amenity.description %></div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>