<div class="card bg-base-100 shadow border border-base-200" id="user-reviews">
  <div class="card-body p-6">
    <h3 class="text-3xl font-bold text-center text-primary">User Reviews</h3>
    <div class="divider divider-primary my-0"></div>

    <div class="p-6 rounded-lg overflow-y-auto h-120">
    <%= turbo_frame_tag "reviews" do %>
      <div class="space-y-4">
        <% @world.reviews.each do |review| %>
          <div class="card border border-base-300 shadow-md hover:shadow-lg transition-shadow">
            <div class="card-body p-6">
              <!-- Header: avatar + name + date -->
              <div class="flex items-center mb-2">
                <div class="flex-shrink-0 mask mask-squircle h-12 w-12">
                  <img src="https://img.daisyui.com/images/profile/demo/5@94.webp" alt="Avatar">
                </div>
                <div class="ml-4">
                  <p class="text-lg font-semibold text-gray-900"><%= review.user&.full_name %></p>
                  <p class="text-sm text-gray-600"><%= review.created_at&.strftime("%d/%m/%Y") %></p>
                </div>
              </div>
              <div class="divider my-0"></div>

              <!-- Review comment -->
              <p class="text-gray-700 mb-2"><%= review.comment %></p>

              <!-- Rating -->
              <div class="flex items-center mt-2">
                <div class="rating gap-1">
                  <% colors = %w[red-400 orange-400 yellow-400 lime-400 green-400] %>
                  <% colors.each_with_index do |color, i| %>
                    <input type="radio"
                           name="rating-<%= review.id %>"
                           class="mask mask-heart bg-<%= color %>"
                           aria-label="<%= i + 1 %> star"
                           <%= "checked" if i + 1 == review.stars %> />
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
    <div class="divider"></div>
        <%# New review %>
        <div id="review-form" class="flex justify-center">
        
          <button class="btn btn-soft btn-secondary" onclick="create_review_modal.showModal()">Cast a review spell<img src="https://static.thenounproject.com/png/6653090-512.png" alt="Potion Icon" style="width: 20px; height: 20px; margin-right: 5px;"></button>
          <%= render "reviews/forms/review_form" %>
        
        </div>
  </div>
</div>