<% @worlds.each do |world| %>
  <div class="card bg-base-100 w-96 shadow-xl flex flex-col">
    <figure>
      <%= image_tag "fantasy_castle.webp", class: "w-full", alt: "fantasy castle" %>
    </figure>
    <div class="card-body flex flex-col flex-1">
      <!-- Title + Category badge -->
      <h2 class="card-title flex flex-wrap items-center gap-2">
        <%= world.title %>
        <div class="badge badge-secondary text-xs break-words whitespace-normal max-w-[8rem]">
          <%= world.category %>
        </div>
      </h2>

      <!-- Description -->
      <p class="flex-1"><%= world.description %></p>

      <div class="divider"></div>

      <!-- Aspects -->
      <div id="aspects">
        <h3 class="card-title">Aspects:</h3>
        <div class="card-actions flex flex-wrap gap-1">
          <% world.tags.each do |tag| %>
            <div class="badge badge-primary"><%= tag.name %></div>
          <% end %>
        </div>
      </div>

      <!-- CTA buttons -->
      <div id="world-cta-btns" class="mt-auto flex gap-2">
        <%= link_to "See world details", world_path(world), class: "rounded-md bg-blue-600 py-2 px-4 text-center text-sm text-white shadow-md hover:shadow-lg transition-all flex-1 text-center" %>
        <%= link_to "Book it!", new_world_booking_path(world), class: "rounded-md bg-pink-600 py-2 px-4 text-center text-sm text-white shadow-md hover:shadow-lg transition-all flex-1 text-center" %>
      </div>
    </div>
  </div>
<% end %>